{
  "compilerOptions": {
    "target": "es2016",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist",
    "outDir": "./dist",
    "rootDir": "./src/",
    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "ts-node": { 
    "transpileOnly": true,
    "require": ["tsconfig-paths/register"]
  },
  "exclude": [
    "node_modules",
    "./dist/**/*", 
    "./src/**/*.test.ts",
    "./*.config.ts",
  ],
}