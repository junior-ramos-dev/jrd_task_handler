{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src/",
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "./dist/",
    "paths": {
      //App Modules Aliases
      "@/*": ["./src/*"],
      "@common/*": ["./common/*"],
      "@controllers/*": ["./controllers/*"],
      "@core/*": ["./core/*"],
      "@example/*": ["./modules/*"],
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": { 
    "transpileOnly": true,
    "require": ["tsconfig-paths/register"]
  },
  "exclude": [
    "node_modues", "jest.config.ts",
  ]
}